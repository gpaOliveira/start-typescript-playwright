{
  "name": "ui-tester",
  "version": "1.0.0",
  "description": "Dedicated UI tests using Playwright",
  "scripts": {
    "open": "npx playwright codegen $(awk -F'[\"=]' '/BASE_URL/ {print $3}' .env)",
    "report": "npx playwright show-report",
    "clean": "rm -rf tests-results/ && rm -rf playwright-report/",
    "check": "npx eslint && npx tsc --project tsconfig.json --noEmit",
    "format": "prettier --write .",
    "test": "npm run check && npx playwright test",
    "docker": "docker compose up --build"
  },
  "dependencies": {
    "@playwright/test": "==1.57.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@typescript-eslint/utils": "^8.43.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.49.0"
  }
}
